footer.c-footer01
	.navBlock
		+MQ_MIN(SP_RES_WID01)
			padding 10px
			background-color #dfdfdf
		.footerNav
			
			+MQ_MAX(SP_RES_WID01)
				&>ul
					&>li
						width 100%
						margin 0
						&>.parentNav
							position relative
							&>a
								padding 15px
								background-color #dfdfdf
		.spParentBtn
			display none
			+MQ_MAX(SP_RES_WID01)
				// cursor pointer
				display block
				position absolute
				top 10px
				right 15px
				width 30px
				height 30px
				background-color #FFF

		.childNav
			+MQ_MIN(SP_RES_WID01)
				height inherit !important
			&>ul
				+MQ_MIN(SP_RES_WID01)
					padding-left 1.0em
				+MQ_MAX(SP_RES_WID01)
					padding 15px
				&>li
					&>a
						fontSize(12)
						
		a
			display block
			color inherit
			text-decoration none
	.copyBlock
		padding 15px
		background-color #cfcfcf
		fontSize(11)