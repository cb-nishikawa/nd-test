//- ヘッダー01

$mainGroup
	display flex
	flex-wrap wrap
	justify-content space-between
	align-items center
	position relative
	margin-bottom 30px
	padding 10px
	z-index 1000
	&:last-child
		margin-bottom 0
	
$logoBlock
	width 200px
	img
		width 100%
		height auto

$spBtnBlock
	display none
	+MQ_MAX(SP_RES_WID01)
		cursor pointer
		display block
		width 40px
		height 40px
		background-color #DFDFDF

$navBlock
	width calc(100% - 200px)
	+MQ_MAX(SP_RES_WID01)
		display none
		flex-direction column
		position absolute
		top 80px
		left 0
		width 100%
		background-color #FFF
		&.is-active
			display block

$subNavArea
	+MQ_MIN(SP_RES_WID01)
		display flex
		flex-wrap wrap
		justify-content flex-end
		align-items center
		margin-bottom 0.5em
	
	+MQ_MAX(SP_RES_WID01)
		order 1
		padding 15px
	
	.subNav
		+MQ_MIN(SP_RES_WID01)
			margin-left 1.5em
			ul
				display flex
				flex-wrap wrap
				justify-content flex-end

			li
				margin-left 1.0em
				fontSize(13)
				&:first-child
					margin-left 0
			
			a
				display block
				color inherit
				text-decoration none
				line-height 1.0

		+MQ_MAX(SP_RES_WID01)
			ul
				display flex
				flex-wrap wrap
			li
				margin-right 10px

	.m-inputText01
		+MQ_MAX(SP_RES_WID01)
			margin-bottom 10px

$globalNavArea
	+MQ_MAX(SP_RES_WID01)
		order 0
	.globalNav
		+MQ_MIN(SP_RES_WID01)
			& > ul
				display flex
				flex-wrap wrap
				justify-content flex-end
				& > li
					margin-left 1.5em
					padding-left 1.5em
					border-left 1px solid #dfdfdf
					&:first-child
						margin-left 0
						padding-left 0
						border-left none
					&:hover
						& > a
							opacity 0.7
							&+.childNav
								display block
								
					& > a
						padding 0.5em 0
						
		+MQ_MAX(SP_RES_WID01)
			& > ul
				& > li
					& > a
						padding 15px
						background-color #dfdfdf
	.childNav
		+MQ_MIN(SP_RES_WID01)
			display none
			position absolute
			left 0
			width 100%
			padding 20px 0
			color #FFF
			background-color #000

			ul
				position relative
				z-index 1
			a
				padding 10px 5px
				&:hover
					opacity 0.7

		+MQ_MAX(SP_RES_WID01)
			padding 15px
			background-color #cfcfcf
			
	a
		display block
		color inherit
		text-decoration none
		line-height 1.0


header.c-header01
	position relative
	background-color #FAFAFA
	&.is-fixed
		position fixed
		width 100%
		z-index 9000
	
	&>.group
		
		&.is-main
			@extend $mainGroup

		&>.block
			&.is-logo
				@extend $logoBlock
			&.is-nav
				@extend $navBlock
			&.is-spBtn
				@extend $spBtnBlock

			&>.area
				
				&.is-subNav
					@extend $subNavArea
				&.is-globalNav
					@extend $globalNavArea
