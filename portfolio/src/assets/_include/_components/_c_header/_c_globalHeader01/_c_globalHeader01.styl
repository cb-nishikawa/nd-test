.c-headerSet01
	position fixed
	top 0
	left 0
	width 100%
	height 100px
	z-index 9000

	.l-mqWrapper
		height 100%

	.componentWrapper
		height 100%
		
		.block.is-logo
			position absolute
			top 50%
			left 50%
			transform translate3d(-50%, -50%, 0)

			width 80px

			.is-eye
				position absolute
				top 50%
				width 5px
				height 5px
				background-color #E2E2E2
				border-radius 100px

				&.is-left
					left 23%
				&.is-right
					right 23%
		
		.block.is-nav
			height 100%
			
			.l-contentsWidth 
				height 100%

			.area.is-nav
				display flex
				justify-content flex-end
				align-items center
				height 100%

				li
					a
						color inherit
						text-decoration none