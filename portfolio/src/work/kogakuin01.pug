
extends /assets/_include/_template/_t_portfolio_template01.pug

block vars
	-
		var pageOption = {
			KEY: "works",
			URL: '',
			RELATIVE_PATH: '../',
			TITLE: '',
			DESCRIPTION: '',
			KEYWORDS: '',
			SIDE: [false, "left"],
			HEADER: true,
			FOOTER: false,
			TOP_CONTENTS: false,
			BOTTOM_CONTENTS: false,
		}


//- ヘッダー
block header
	+c-globalHeader01
		
//- コンテンツ　
block contents
	section.c-workDetailSet01
		.componentWrapper
			.block.is-mainvisual(style="background-image: url('../assets/images/contents/kogakuin01_mainvisual_bg01.png')")
				+l-mqWrapper({tag:"div"})
					+l-contentsWidth({tag:"div"})
						.area.is-mainvisual03
							.m-workDetailSet01_mainvisual01
								.moduleWrapper
									span
										//- img(src="https://placehold.jp/1200x660.png", alt="")
										img(src= pageOption.RELATIVE_PATH + "assets/images/contents/kogakuin01_mainvisual01.png", alt="")
							

			.block.is-contents
				.area.is-title
					+l-mqWrapper({tag:"div"})
						+l-contentsWidth({tag:"div"})
							p.date
								span 2019
							
							h2.title
								span 工学院大学附属中学校・高等学校
							
							p.text 工学院大学附属中学校・高等学校のWebサイトを制作しました。HTML ・ CSS コーディング / JavaScriptを担当させていただきました。

							h3.subTitle
								span 担当業務
							
							p.list HTML ・ CSS コーディング / JavaScript

							p.link
								a(href="https://www.js.kogakuin.ac.jp/" target="_blank")
									span 工学院大学附属中学校・高等学校
			

